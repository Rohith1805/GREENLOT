<!-- Sensors Used -->
<!-- Sensors Used -->
<section class="sensors-section">
  <h2 data-key="sensorsTitle">Sensors & Components Used</h2>
  <div class="sensor-cards">
    <!-- ESP32 -->
    <div class="sensor-card" data-sensor="esp32">
      <div class="icon">🧠</div>
      <h3 data-key="esp32Title">ESP32-WROOM-32D</h3>
      <p class="summary" data-key="esp32Summary">Main controller with Wi-Fi and Bluetooth connectivity.</p>
    </div>

    <!-- Relay Module -->
    <div class="sensor-card" data-sensor="relay">
      <div class="icon">⚡</div>
      <h3 data-key="relayTitle">Relay Module</h3>
      <p class="summary" data-key="relaySummary">Controls devices like pumps with electrical isolation.</p>
    </div>

    <!-- DHT22 -->
    <div class="sensor-card" data-sensor="dht22">
      <div class="icon">🌡️</div>
      <h3 data-key="dht22Title">DHT22 Sensor</h3>
      <p class="summary" data-key="dht22Summary">Monitors temperature and humidity for smarter irrigation.</p>
    </div>

    <!-- MQ-2 Gas Sensor -->
    <div class="sensor-card" data-sensor="gas">
      <div class="icon">🔥</div>
      <h3 data-key="gasSensorTitle">MQ-2 Gas Sensor</h3>
      <p class="summary" data-key="gasSensorSummary">Detects gas leaks and flammable gases for safety monitoring.</p>
    </div>
    
    <!-- Soil Moisture Sensor -->
    <div class="sensor-card" data-sensor="soil">
      <div class="icon">🌱</div>
      <h3 data-key="soilTitle">Soil Moisture Sensor</h3>
      <p class="summary" data-key="soilSummary">Measures the water content in soil to control irrigation.</p>
    </div>

    <!-- LDR Sensor -->
    <div class="sensor-card" data-sensor="ldr">
      <div class="icon">💡</div>
      <h3 data-key="ldrTitle">LDR Sensor</h3>
      <p class="summary" data-key="ldrSummary">Detects ambient light levels to adjust watering schedules.</p>
    </div>

    <!-- OLED Display -->
    <div class="sensor-card" data-sensor="oled">
      <div class="icon">🖥️</div>
      <h3 data-key="oledTitle">OLED Display</h3>
      <p class="summary" data-key="oledSummary">Displays real-time sensor data and system status.</p>
    </div>

    <!-- Water Pump -->
    <div class="sensor-card" data-sensor="pump">
      <div class="icon">🚿</div>
      <h3 data-key="pumpTitle">Water Pump</h3>
      <p class="summary" data-key="pumpSummary">Controls water flow to crops based on sensor inputs.</p>
    </div>

    <!-- Stepper Motor -->
    <div class="sensor-card" data-sensor="stepper">
      <div class="icon">🔄</div>
      <h3 data-key="stepperTitle">Stepper Motor</h3>
      <p class="summary" data-key="stepperSummary">Used to rotate mechanisms like irrigation valves or solar panels.</p>
    </div>
  </div>
